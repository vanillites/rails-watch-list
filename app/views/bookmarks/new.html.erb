<h1>Add a new bookmark to <%= @list.name %></h1>
<%= simple_form_for([@list, @bookmark]) do |f| %>
  <%= f.input :comment, as: :text %>
  <%= f.input :movie_id, as: :select, collection: @movies, prompt: 'Select movie', label: false %>
  <%= f.button :submit %>
<% end %>

<%= link_to "Cancel", list_path(@list) %>
